
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own documents
    match /documents/{documentId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    // Users can only read and write their own messages within their documents
    match /documents/{documentId}/messages/{messageId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/documents/$(documentId)).data.userId == request.auth.uid;
    }
    // Users can only read and write to their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
